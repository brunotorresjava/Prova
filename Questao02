import javax.swing.*;
import java.util.Random;

public class JogoAdivinhacao {
    public static void main(String[] args) {
        // Gera um número aleatório entre 0 e 100
        Random random = new Random();
        int numeroSorteado = random.nextInt(101);
        int tentativas = 5;
        boolean acertou = false;

        // Loop para até 5 tentativas
        for (int i = 1; i <= tentativas; i++) {
            // Solicita ao usuário que adivinhe o número
            String entrada = JOptionPane.showInputDialog(null, "Tentativa " + i + " de " + tentativas + ": Adivinhe o número (0 a 100)");

            // Verifica se o usuário clicou em cancelar ou fechou o diálogo
            if (entrada == null) {
                JOptionPane.showMessageDialog(null, "Jogo encerrado!");
                return;
            }

            // Converte a entrada para inteiro
            int palpite;
            try {
                palpite = Integer.parseInt(entrada);
            } catch (NumberFormatException e) {
                JOptionPane.showMessageDialog(null, "Por favor, insira um número válido.");
                i--; // Não contar tentativa inválida
                continue;
            }

            // Verifica se o palpite está correto
            if (palpite == numeroSorteado) {
                JOptionPane.showMessageDialog(null, "Parabéns! Você acertou o número " + numeroSorteado + "!");
                acertou = true;
                break;
            } else if (palpite > numeroSorteado) {
                JOptionPane.showMessageDialog(null, "O número é menor que " + palpite);
            } else {
                JOptionPane.showMessageDialog(null, "O número é maior que " + palpite);
            }
        }

        // Se o usuário não acertou em 5 tentativas
        if (!acertou) {
            JOptionPane.showMessageDialog(null, "Não foi dessa vez, tente outra vez! O número era " + numeroSorteado + ".");
        }
    }
}
